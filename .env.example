# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Optional: Comma-separated list of allowed Telegram chat IDs for security
# Leave empty to allow all users
ALLOWED_CHAT_IDS=

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Downloads directory (absolute or relative path)
DOWNLOADS_DIR=./downloads

# Dashboard login credentials
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=changeme

# Pyrogram (Large File Downloads — up to 4 GB)
# Get api_id and api_hash from https://my.telegram.org → API development tools
PYROGRAM_API_ID=your_api_id_here
PYROGRAM_API_HASH=your_api_hash_here
PYROGRAM_PHONE=+1234567890
